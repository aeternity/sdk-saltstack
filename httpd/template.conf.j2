<VirtualHost *:80>
  ServerName {{hostname}}
  Redirect permanent / https://{{hostname}}/
</VirtualHost>

<IfModule mod_ssl.c>
<VirtualHost *:443>
  ServerName {{hostname}}

  ErrorLog logs/{{hostname}}_error_log
  TransferLog logs/{{hostname}}_access_log
  LogLevel warn

{% include config %}
</VirtualHost>
</IfModule>
